{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "prefer-destructuring": "warn",
    "arrow-spacing": "warn",
    "camelcase": "warn",
    "sort-imports": "warn",
    "no-unused-vars": "warn",
    "jsx-quotes": "off",
    "quotes": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-one-expression-per-line": "off",
    "react/prefer-stateless-function": "off"
  }
}
